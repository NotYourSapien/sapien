#include <iostream>
#include <string>
#include <ctime>

// Get current date/time in the format YYYY-MM-DD.HH:mm:ss
const std::string currentDateTime() {
    time_t now = time(0);
    struct tm tstruct;
    char buf[80];
    tstruct = *localtime(&now);
    strftime(buf, sizeof(buf), "%Y-%m-%d %H:%M:%S", &tstruct);
    return buf;
}

int main() {
    std::cout << "Current date and time: " << currentDateTime() << std::endl;
    return 0;
}
